{
  "name": "riprsa.dev",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter \"*\" dev",
    "build": "bun run --filter \"*\" build",
    "backend:dev": "bun run --cwd apps/backend dev",
    "frontend:dev": "bun run --cwd apps/frontend dev",
    "frontend:build": "bun run --cwd apps/frontend build",
    "backend:gen": "bun run --cwd apps/backend gen"
  },
  "devDependencies": {
    "@types/node": "^22.0.2",
    "eslint": "^8.57.0"
  }
}